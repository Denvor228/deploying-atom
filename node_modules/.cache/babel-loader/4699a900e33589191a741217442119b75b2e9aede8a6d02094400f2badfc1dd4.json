{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nimport YouTube from \"vue3-youtube\";\nexport default {\n  name: \"Default-layout\",\n  data: () => ({\n    isActive: false,\n    posts: [],\n    errors: [],\n    videoUrl: \"\",\n    title: \"\",\n    subtitle: \"\",\n    description: \"\",\n    currentElemnt: \"\",\n    currentTime: \"\",\n    currentStatus: \"\",\n    timer: null,\n    disabled: []\n  }),\n  components: {\n    YouTube\n  },\n  created() {\n    axios.get(`http://localhost:8081/db.json`).then(response => {\n      this.posts = response.data;\n    }).catch(e => {\n      this.erros.push(e);\n    });\n  },\n  updated() {\n    if (!this.videoUrl) {\n      this.changeLesson(0);\n    }\n  },\n  methods: {\n    changeLesson(index) {\n      this.videoUrl = this.posts[index].video_url;\n      this.title = this.posts[index].title;\n      this.description = this.posts[index].description;\n      this.subtitle = this.posts[index].subtitle;\n      this.currentElemnt = index;\n      this.currentTime = this.posts[index].video_time;\n      this.disabled.push(index);\n    },\n    startTimer() {\n      if (this.currentTime !== 0) {\n        this.timer = setInterval(() => {\n          this.currentTime--;\n          console.log(this.currentTime);\n        }, 1000);\n      }\n    },\n    stopTimer() {\n      clearTimeout(this.timer);\n      this.timer = null;\n    }\n  },\n  watch: {\n    currentTime(time) {\n      if (time <= 0) {\n        this.stopTimer();\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","YouTube","name","data","isActive","posts","errors","videoUrl","title","subtitle","description","currentElemnt","currentTime","currentStatus","timer","disabled","components","created","get","then","response","catch","e","erros","push","updated","changeLesson","methods","index","video_url","video_time","startTimer","setInterval","console","log","stopTimer","clearTimeout","watch","time"],"sources":["/home/den/test-work/test/src/layouts/Default-layout.vue"],"sourcesContent":["<template>\n  <div class=\"container\">\n    <header><div class=\"logo\"></div></header>\n\n    <h2 class=\"header\">\n      Як заробляти <span class=\"orange\">від $100</span> на день на налаштуванні\n      рекламних кампаній Facebook+Instagram\n    </h2>\n    <div class=\"lesson-title\">\n      <h3 class=\"title\">{{ title }}</h3>\n      <p class=\"subtitle\">{{ subtitle }}</p>\n    </div>\n    <div class=\"lesson-block\">\n      <div class=\"youtube-area\">\n        <YouTube\n          class=\"lesson-video\"\n          :src=\"videoUrl\"\n          :autoplay=\"1\"\n          @state-change=\"\n            this.$refs.youtube.getPlayerState() === 1\n              ? startTimer()\n              : stopTimer()\n          \"\n          ref=\"youtube\"\n        />\n      </div>\n      <div class=\"lessons-list\">\n        <ul v-if=\"posts && posts.length\">\n          <li\n            v-for=\"(post, index) of posts\"\n            class=\"lesson-link disabled\"\n            :id=\"index\"\n            :class=\"\n              (index === currentElemnt ? 'lesson-link-active' : 'lesson-link',\n              disabled[index] === index ? false : 'disabled')\n            \"\n            @click=\"currentTime === 0 ? changeLesson(index) : false\"\n            :key=\"post\"\n            :ref=\"index\"\n          >\n            <p class=\"background-image\"></p>\n            <p class=\"lesson-link-text\">{{ post.subtitle }}</p>\n          </li>\n        </ul>\n\n        <ul v-if=\"errors && errors.length\">\n          <li v-for=\"(index, error) of errors\" :key=\"index\">\n            {{ error.message }}\n          </li>\n        </ul>\n      </div>\n    </div>\n    <div class=\"bottom-block\">\n      <div class=\"lesson-block-description\">\n        <h4 class=\"lesson-description-header\">\n          У цьому епізоді ви дізнаєтесь:\n        </h4>\n        <p class=\"lesson-description\">{{ description }}</p>\n      </div>\n      <div class=\"button-block\">\n        <p\n          v-if=\"currentTime === 0 && currentElemnt !== posts.length - 1\"\n          class=\"button-description\"\n        >\n          Вже переглянули? Отримайте доступ до наступного:\n        </p>\n        <button\n          v-if=\"currentTime === 0 && currentElemnt !== posts.length - 1\"\n          class=\"next-lesson-button\"\n          @click=\"\n            currentElemnt < posts.length - 1\n              ? changeLesson(currentElemnt + 1)\n              : false\n          \"\n        >\n          Наступний епізод\n        </button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport YouTube from \"vue3-youtube\";\n\nexport default {\n  name: \"Default-layout\",\n\n  data: () => ({\n    isActive: false,\n    posts: [],\n    errors: [],\n    videoUrl: \"\",\n    title: \"\",\n    subtitle: \"\",\n    description: \"\",\n    currentElemnt: \"\",\n    currentTime: \"\",\n    currentStatus: \"\",\n    timer: null,\n    disabled: [],\n  }),\n\n  components: { YouTube },\n\n  created() {\n    axios\n      .get(`http://localhost:8081/db.json`)\n      .then((response) => {\n        this.posts = response.data;\n      })\n      .catch((e) => {\n        this.erros.push(e);\n      });\n  },\n\n  updated() {\n    if (!this.videoUrl) {\n      this.changeLesson(0);\n    }\n  },\n\n  methods: {\n    changeLesson(index) {\n      this.videoUrl = this.posts[index].video_url;\n      this.title = this.posts[index].title;\n      this.description = this.posts[index].description;\n      this.subtitle = this.posts[index].subtitle;\n      this.currentElemnt = index;\n      this.currentTime = this.posts[index].video_time;\n      this.disabled.push(index);\n    },\n\n    startTimer() {\n      if (this.currentTime !== 0) {\n        this.timer = setInterval(() => {\n          this.currentTime--;\n          console.log(this.currentTime);\n        }, 1000);\n      }\n    },\n\n    stopTimer() {\n      clearTimeout(this.timer);\n      this.timer = null;\n    },\n  },\n\n  watch: {\n    currentTime(time) {\n      if (time <= 0) {\n        this.stopTimer();\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n.container {\n  width: 1200px;\n  margin: auto;\n}\n\n.logo {\n  background-image: url(../../public/i/atom_logo.svg);\n  width: 100px;\n  height: 75px;\n  background-size: contain;\n  background-repeat: no-repeat;\n  margin: auto;\n}\n\n.header {\n  max-width: 75%;\n  margin: auto;\n}\n.orange {\n  color: orange;\n}\n\n.title {\n  color: orange;\n}\n\n.subtitle {\n  margin-left: 5px;\n}\n\n.youtube-area {\n  padding: 0 30px 50px 0;\n}\n\n.lesson-title {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  margin-top: 50px;\n}\n\n.lesson-block {\n  max-width: 85%;\n  margin: auto;\n  display: flex;\n  margin-top: 60px;\n}\n\n.background-image {\n  background-image: url(https://i.ytimg.com/vi/7b0maNVkwCE/hqdefault.jpg?s…AFwAcABBg==&rs=AOn4CLDaIy41J7S3zs1H-M5-86B594Eu5A);\n  margin: 0;\n  height: 64px;\n  width: 100px;\n  background-size: cover;\n  background-repeat: no-repeat;\n}\n\n.lessons-list {\n  width: 100%;\n  display: flex;\n  align-items: baseline;\n  justify-content: end;\n}\n\n.lesson-link-active {\n  background: orange !important;\n}\n\n.lesson-link {\n  width: 400px;\n  height: 64px;\n  background: rgb(128, 128, 128, 0.5);\n  display: flex;\n  margin-bottom: 10px;\n  cursor: pointer;\n}\n\n.lesson-link a > p {\n  margin: 0;\n}\n\n.disabled {\n  pointer-events: none;\n  background-color: rgb(51, 51, 51, 0.7);\n}\n\n.lesson-link-text {\n  text-decoration: none;\n  color: whitesmoke;\n  display: flex;\n  flex-direction: column;\n  justify-content: center;\n  width: 200px;\n  text-align: center;\n  margin-left: 35px;\n}\n\n.lesson-block-description {\n  margin-top: 50px;\n  width: 75%;\n  margin: auto;\n  text-align: left;\n}\n\n.bottom-block {\n  max-width: 85%;\n  display: flex;\n  margin: auto;\n  margin-top: 50px;\n  justify-content: space-between;\n}\n\n.lesson-description {\n  width: 50%;\n}\n\n.lesson-description-header {\n  margin-top: 0;\n  color: orange;\n  font-size: 30px;\n}\n\n.button-description {\n  margin: 0;\n}\n\n.button-block {\n  width: 30%;\n}\n\n.next-lesson-button {\n  padding: 0;\n  border: none;\n  background-color: orange;\n  height: 60px;\n  width: 250px;\n  color: white;\n  margin-top: 30px;\n}\n\nfooter {\n  height: 70px;\n}\n\n.content {\n}\n\nul {\n  list-style: none;\n  margin: 0;\n  padding: 0px;\n}\n\nli {\n  margin: 0 5px;\n}\n\n.link {\n  text-decoration: none;\n}\n</style>\n"],"mappings":";AAmFA,OAAOA,KAAI,MAAO,OAAO;AACzB,OAAOC,OAAM,MAAO,cAAc;AAElC,eAAe;EACbC,IAAI,EAAE,gBAAgB;EAEtBC,IAAI,EAAEA,CAAA,MAAO;IACXC,QAAQ,EAAE,KAAK;IACfC,KAAK,EAAE,EAAE;IACTC,MAAM,EAAE,EAAE;IACVC,QAAQ,EAAE,EAAE;IACZC,KAAK,EAAE,EAAE;IACTC,QAAQ,EAAE,EAAE;IACZC,WAAW,EAAE,EAAE;IACfC,aAAa,EAAE,EAAE;IACjBC,WAAW,EAAE,EAAE;IACfC,aAAa,EAAE,EAAE;IACjBC,KAAK,EAAE,IAAI;IACXC,QAAQ,EAAE;EACZ,CAAC,CAAC;EAEFC,UAAU,EAAE;IAAEf;EAAQ,CAAC;EAEvBgB,OAAOA,CAAA,EAAG;IACRjB,KAAI,CACDkB,GAAG,CAAE,+BAA8B,EACnCC,IAAI,CAAEC,QAAQ,IAAK;MAClB,IAAI,CAACf,KAAI,GAAIe,QAAQ,CAACjB,IAAI;IAC5B,CAAC,EACAkB,KAAK,CAAEC,CAAC,IAAK;MACZ,IAAI,CAACC,KAAK,CAACC,IAAI,CAACF,CAAC,CAAC;IACpB,CAAC,CAAC;EACN,CAAC;EAEDG,OAAOA,CAAA,EAAG;IACR,IAAI,CAAC,IAAI,CAAClB,QAAQ,EAAE;MAClB,IAAI,CAACmB,YAAY,CAAC,CAAC,CAAC;IACtB;EACF,CAAC;EAEDC,OAAO,EAAE;IACPD,YAAYA,CAACE,KAAK,EAAE;MAClB,IAAI,CAACrB,QAAO,GAAI,IAAI,CAACF,KAAK,CAACuB,KAAK,CAAC,CAACC,SAAS;MAC3C,IAAI,CAACrB,KAAI,GAAI,IAAI,CAACH,KAAK,CAACuB,KAAK,CAAC,CAACpB,KAAK;MACpC,IAAI,CAACE,WAAU,GAAI,IAAI,CAACL,KAAK,CAACuB,KAAK,CAAC,CAAClB,WAAW;MAChD,IAAI,CAACD,QAAO,GAAI,IAAI,CAACJ,KAAK,CAACuB,KAAK,CAAC,CAACnB,QAAQ;MAC1C,IAAI,CAACE,aAAY,GAAIiB,KAAK;MAC1B,IAAI,CAAChB,WAAU,GAAI,IAAI,CAACP,KAAK,CAACuB,KAAK,CAAC,CAACE,UAAU;MAC/C,IAAI,CAACf,QAAQ,CAACS,IAAI,CAACI,KAAK,CAAC;IAC3B,CAAC;IAEDG,UAAUA,CAAA,EAAG;MACX,IAAI,IAAI,CAACnB,WAAU,KAAM,CAAC,EAAE;QAC1B,IAAI,CAACE,KAAI,GAAIkB,WAAW,CAAC,MAAM;UAC7B,IAAI,